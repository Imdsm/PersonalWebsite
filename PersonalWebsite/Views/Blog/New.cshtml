@model PersonalWebsite.Models.NewBlogPostViewModel

@{
    ViewBag.Title = "New Blog Post";
}

<script>$(document).ready(function () { $("#taginput").tagit({ availableTags: [] }); });</script>

<div class="row">
    <div class="twelve columns">
        <h4 class="blog-editor-label">New Post</h4>
       
        @using (Html.BeginForm())
        {
            <div class="row">
        	    <div class="twelve columns">
                    @Html.TextBoxFor(m => m.BlogTitle, htmlAttributes: new { @placeholder = "Enter post title" })                    
        	    </div>
            </div>

            <div class="row">
        	    <div class="twelve columns blog-editor-textarea">
                    @Html.TextAreaFor(m => m.BlogContent, htmlAttributes: new { @placeholder = "Enter post title" })                    
        	    </div>
            </div>

            <div class="row">
                <div class="twelve columns blog-editor-tags">
                    <label for="tags">Tags:</label>
                    <ul id="taginput"></ul>
        	    </div>
            </div>
        
            <div class="row">
                <div class="twelve columns blog-editor-buttons">
                    <input type="submit" class="button small radius" value="Publish" />                    
                    @Html.ActionLink("Close", "Manage", null, htmlAttributes: new { @class = "button small radius secondary" })
        	    </div>
            </div>
            
            if (!Html.ViewData.ModelState.IsValid)
            {
                <div class="six columns"> 
                    @Html.ValidationSummary(false, null, htmlAttributes: new { @class = "blog-editor-validation-summary" })
                </div>                
            }
        }
    </div>
</div>