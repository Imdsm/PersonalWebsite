@using PersonalWebsite.Extensions
@model PersonalWebsite.Models.Blog.ReadViewModel

@{
    ViewBag.Title = "View";
}

<div class="row">
    <div class="nine columns">
        <article>
            <h3>@Html.ActionLink(Model.BlogPost.BlogTitle, "Read", new { id = Model.BlogPost.BlogPostId, slug = Model.BlogPost.Slug })</h3>
            <h6>Posted @PersonalWebsite.Helpers.DateHelper.GetReadableDate(Model.BlogPost.DatePosted).</h6>
            
            @Html.Markdown(Model.BlogPost.BlogContent)
            
            <p class="post-tag-text">
                Tags: 
                @foreach (var tag in Model.BlogPost.Tags.OrderBy(x => x.TagName))
                {
                    @Html.ActionLink(tag.TagName, "Tagged", "Blog", 
                        routeValues: new { id = tag.TagId, slug = tag.TagName }, 
                        htmlAttributes: new { @class = "label label-spacing radius" })
                }
            </p>
        </article>
    </div>
    <div class="three columns">
        @Html.Action("Sidebar")
    </div>
</div>