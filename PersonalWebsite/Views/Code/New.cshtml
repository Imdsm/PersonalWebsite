@model PersonalWebsite.Models.NewCodePostViewModel

@{
    ViewBag.Title = "New Code Post";
}

<script>
    $(function () {
        $("#taginput").tagit();
    });
</script>

<div class="row">
    <div class="twelve columns">
        <h4 class="code-editor-label">New Code Post</h4>
       
        @using (Html.BeginForm())
        {
            <div class="row">
        	    <div class="twelve columns code-editor-input">
                    @Html.TextBoxFor(m => m.CodeTitle, htmlAttributes: new { @placeholder = "Enter post title" })                                        
        	    </div>
            </div>

            <div class="row">
        	    <div class="twelve columns code-editor-textarea">
                    @Html.TextAreaFor(m => m.CodeContent, htmlAttributes: new { @placeholder = "Enter post title" })                    
        	    </div>
            </div>

            <div class="row">
                <div class="twelve columns code-editor-tags">
                    <label for="tags">Tags:</label>
                    <ul id="taginput"></ul>
        	    </div>
            </div>
        
            <div class="row">
                <div class="six columns code-editor-validation">
                    @Html.ValidationSummary(false, null, htmlAttributes: new { @class = "code-editor-validation-summary" })
                </div>
                <div class="six columns code-editor-buttons">
                    <input type="submit" class="button small radius" value="Publish" />                    
                    @Html.ActionLink("Close", "Manage", null, htmlAttributes: new { @class = "button small radius secondary" })
        	    </div>
            </div>
        }
    </div>
</div>