@using PersonalWebsite.Classes

@{
    ViewBag.Title = "Profile";
}

<div class="row profile">
    <div class="two columns">
        
        <div class="portrait">
            <img src="/Content/images/portrait.jpg"> 
        </div>

        @Html.Action("Skills")
        @Html.Action("Traits")
    </div>
    <div class="ten columns">
        <div class="row">
            <div class="twelve columns">
                @Html.Action("AboutMe")
            </div>
        </div>

        <div class="row">
            <div class="twelve columns">
                @Html.Action("PieCharts")
            </div>
        </div>

        <div class="row">
            <div class="twelve columns">
                <div class="coderbits_footer">
                    <p>
                        <strong>Intelligent portfolios for developers and designers</strong><br />
                        View my complete code profile at <a href="https://coderbits.com/Imdsm">https://coderbits.com/Imdsm</a><br />
                        View this widget on GitHub at <a href="https://github.com/Imdsm/Coderbits.PieCharts">https://github.com/Imdsm/Coderbits.PieCharts</a>
                    </p>
                    <img src="~/Content/images/powered_by_coderbits.png" />                    
                    <br style="clear:both;" />
                </div>                
            </div>
        </div>
    </div>
</div>